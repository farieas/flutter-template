{
  "name": "Flutter State Management Starter",
  "description": "A Flutter template with configurable state management solutions.",
  "icon": "https://www.gstatic.com/images/branding/productlogos/flutter/v6/192px.svg",
  "params": [
    {
      "id": "projectName",
      "name": "App Name", 
      "type": "text",
      "default": "App name",
      "required": true
    },
    {
      "id": "arch",
      "name": "Arch",
      "type": "enum",
      "options": {
          "mvvm": "MVVM",
          "clean": "Clean",
          "mvc" : "MVC"
        }
      ,
      "default": "mvvm",
      "required": true
    },
    {
      "id": "stateManagement",
      "name": "State Management",
      "type": "enum",
      "options": {
          "provider": "Provider",
          "bloc": "BLoC",
          "riverpod": "Riverpod",
          "none": "None (setState)"
        }
      ,
      "default": "bloc",
      "required": true
    }
  ]
}
