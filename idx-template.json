{
  "name": "Flutter State Management Starter",
  "description": "A Flutter template with configurable state management solutions.",
  "icon": "https://storage.googleapis.com/idx-assets/icons/flutter.svg",
  "params": [
    {
      "id": "projectName",
      "name": "Project Name",
      "type": "text",
      "default": "flutter_app"
    },
    {
      "id": "orgName",
      "name": "Organization Domain",
      "type": "text",
      "default": "com.example"
    },
    {
      "id": "stateManagement",
      "name": "State Management",
      "type": "enum",
      "options": [
        {
          "label": "Provider",
          "value": "provider"
        },
        {
          "label": "BLoC",
          "value": "bloc"
        },
        {
          "label": "Riverpod",
          "value": "riverpod"
        },
        {
          "label": "GetX",
          "value": "getx"
        },
        {
          "label": "None (setState)",
          "value": "none"
        }
      ],
      "default": "provider"
    }
  ]
}