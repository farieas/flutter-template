{
    "name": "Flutter + Firebase Starter",
    "description": "A template for Flutter apps with Firebase Auth & Firestore setup",
    "icon": "https://yourdomain.com/icon-flutter-firebase.svg",
    "params": [
        {
            "id": "include_firestore",
            "name": "Include Firestore",
            "type": "boolean",
            "default": true,
            "required": false
        },
        {
            "id": "auth_type",
            "name": "Auth Method",
            "type": "enum",
            "default": "email",
            "options": {
                "email": "Email & Password",
                "google": "Google Sign-In"
            },
            "required": true
        }
    ]
}